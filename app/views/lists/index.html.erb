<h1>A Simple To-Do List</h1>

<div class="card" style="width: 18rem;">
	<div class="card-body">
		<%= render "form_index" %>
	</div>
</div>
<br/>

<table class="table table-bordered">
  

  <tbody>
    <% @lists.each do |list| %>
    
    <% if list.completed %>
      <tr class="table-secondary">
        <td class="striker"><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
        
        <td>
          <% link_to 'Show', list %>
          
          <center><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></center>
        </td>
      </tr>
    <% else %>
      <tr>
        <td><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
        
        <td>
          <% link_to 'Show', list %>
         
          <center><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></center>
        </td>
      </tr>
    <% end %>
    
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Item', new_list_path, class: 'btn btn-primary' %>
